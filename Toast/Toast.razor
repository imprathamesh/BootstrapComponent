<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div class="toast align-items-center text-@TextColor.Name bg-@BackgroundColor.Name" role="alert" aria-live="assertive" aria-atomic="true" @attributes="AdditionalAttributes">
        <div class="d-flex">
            <div class="toast-body">
                @ChildContent
            </div>
            <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
</div>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public bool Visible { get; set; }
    [Parameter] public bool CloseButtonVisible { get; set; }
    [Parameter] public string? Icon { get; set; }
    [Parameter] public Color BackgroundColor { get; set; } = Color.Primary;
    [Parameter] public Color TextColor { get; set; } = Color.White;
    [Parameter(CaptureUnmatchedValues = true)] public IReadOnlyDictionary<string, object>? AdditionalAttributes { get; set; }
}
