<div class="wrapper">
    @if (LeftContent is not null)
    {
        <div id="sidebar" class="d-print-none sidebar">
            @LeftContent
        </div>
    }
    @if (MainContent is not null)
    {
        <div class="content">
            <div class="container-fluid">
                @MainContent
            </div>
        </div>
    }
    @if (BottomContent is not null)
    {
        <div class="bottom-nav">
            @BottomContent
        </div>
    }
</div>

@code {
    [Parameter] public RenderFragment LeftContent { get; set; }
    [Parameter] public RenderFragment MainContent { get; set; }
    [Parameter] public RenderFragment BottomContent { get; set; }
}
