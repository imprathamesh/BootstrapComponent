@if (Visible)
{
    <div class="alert alert-@BackgroundColor.Name text-@TextColor.Name alert-dismissible" role="alert" @attributes="AdditionalAttributes">
        <div class="d-flex align-items-center">
            @if (ShowCloseButton)
            {
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            }
            <div class=""><i class="@Icon la-2x me-2"></i></div>
            <div>@ChildContent</div>
        </div>
    </div>
}
@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public bool Visible { get; set; }
    [Parameter] public bool ShowCloseButton { get; set; }
    [Parameter] public Color BackgroundColor { get; set; } = Color.Primary;
    [Parameter] public Color TextColor { get; set; } = Color.White;
    [Parameter] public string? Icon { get; set; }
    [Parameter(CaptureUnmatchedValues = true)]
    public IReadOnlyDictionary<string, object>? AdditionalAttributes { get; set; }
   }
