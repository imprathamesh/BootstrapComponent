<div class="progress @Class" style="height: @( Height + "px")">
    @ChildContent
</div>
@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    /// <summary>
    /// Css Class
    /// </summary>
    [Parameter] public string? Class { get; set; }
    /// <summary>
    /// Height of progress bar container
    /// </summary>
    [Parameter] public float? Height { get; set; } = 16;
}
