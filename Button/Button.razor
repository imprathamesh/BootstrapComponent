@if (ShowLoading)
{
    <button type="submit" class="btn btn-@Color.Name btn-@Size.Name @CssClass" @attributes="AdditionalAttributes" disabled>
        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
        @Title
    </button>
}
else
{
    <button type="submit" class="btn btn-@Color.Name btn-@Size.Name @CssClass" @attributes="AdditionalAttributes">@Title</button>
}

@code {
    [Parameter] public string? CssClass { get; set; }
    [Parameter(CaptureUnmatchedValues = true)] public IReadOnlyDictionary<string, object>? AdditionalAttributes { get; set; }
    /// <summary>
    /// Color of Button
    /// </summary>
    [Parameter] public Color Color { get; set; } = Color.Primary;
    /// <summary>
    /// button size
    /// </summary>
    [Parameter] public Size Size { get; set; } = Size.Medium;
    [Parameter] public string? Title { get; set; }
    /// <summary>
    /// show loading icon
    /// </summary>
    [Parameter] public bool ShowLoading { get; set; } = false;

}
